class ConfigManager:
    # ... (ä¿ç•™ __init__, _load_json, get_all_templates)

    def save_template(self, template_id: str, template_data: Dict):
        user_data = self._load_json(self.user_path)
        
        # ç¡®ä¿ä¿å­˜ tags å­—æ®µ
        save_payload = {
            "name": template_data.get("name"),
            "desc": template_data.get("desc"),
            # "category": ... (æ—§åˆ†ç±»å­—æ®µå¯ç•™å¯ä¸ç•™ï¼Œå»ºè®®ä¿ç•™å…¼å®¹)
            "tags": template_data.get("tags", []), # === æ–°å¢ ===
            "template": template_data.get("template"),
            "params": template_data.get("params"),
            "updated_at": "now"
        }
        
        user_data[template_id] = save_payload
        self._save_json(self.user_path, user_data)
    
    # ... (ä¿ç•™ delete_template ç­‰)

