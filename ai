import json
import os
import uuid

class TagManager:
    def __init__(self, tag_file="tags.json"):
        self.file_path = tag_file

    def get_all_tags(self):
        if not os.path.exists(self.file_path):
            # é»˜è®¤åˆå§‹åŒ–ä¸€äº›æ ‡ç­¾
            default_tags = {
                "t1": {"name": "Linux", "color": "#f50", "group": "æŠ€æœ¯æ ˆ"},
                "t2": {"name": "Oracle", "color": "#f50", "group": "æŠ€æœ¯æ ˆ"},
                "t3": {"name": "ç”Ÿäº§ç¯å¢ƒ", "color": "#87d068", "group": "ç¯å¢ƒ"},
                "t4": {"name": "é«˜å±", "color": "#ff0000", "group": "é£é™©"}
            }
            self._save(default_tags)
            return default_tags
        with open(self.file_path, 'r', encoding='utf-8') as f:
            return json.load(f)

    def save_tag(self, tag_id, name, color, group):
        tags = self.get_all_tags()
        if not tag_id: tag_id = str(uuid.uuid4())[:8]
        tags[tag_id] = {"name": name, "color": color, "group": group}
        self._save(tags)
        return tag_id

    def delete_tag(self, tag_id):
        tags = self.get_all_tags()
        if tag_id in tags:
            del tags[tag_id]
            self._save(tags)

    def _save(self, data):
        with open(self.file_path, 'w', encoding='utf-8') as f:
            json.dump(data, f, indent=4, ensure_ascii=False)

ğŸ“„ core/config_manager.py (å¾®è°ƒ)
