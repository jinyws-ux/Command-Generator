USER_CONFIG_PATH = "user_config.json"

def main():
    # è®¾ç½®å®½å±æ¨¡å¼ï¼Œé¡µé¢æ ‡é¢˜
    st.set_page_config(page_title="Ops Console", layout="wide", page_icon="âš¡")

    # åˆå§‹åŒ–é…ç½®ç®¡ç†å™¨
    cfg_mgr = ConfigManager(TEAM_CONFIG_PATH, USER_CONFIG_PATH)

    # ==========================================
    # 1. å…¨å±€ä¾§è¾¹æ  (ä¸€çº§å¯¼èˆª)
    # ==========================================
    with st.sidebar:
        st.title("âš¡ Ops Console")
        st.caption("v2.1.0 Enterprise Edition")
        st.markdown("---")
        
        # æ¨¡å—åˆ—è¡¨ (ä½¿ç”¨ Radio æ¨¡æ‹Ÿå¯¼èˆªæ )
        MODULES = {
            "cmd_gen": "ğŸ“ å‘½ä»¤ç”Ÿæˆå™¨",
            "db_tools": "ğŸ’¾ æ•°æ®åº“å·¥å…·",
            "monitor": "ğŸ“Š å®æ—¶ç›‘æ§",
            "settings": "âš™ï¸ ç³»ç»Ÿè®¾ç½®"
        }
        
        selected_mod = st.radio(
            "æ¨¡å—é€‰æ‹©", 
            options=list(MODULES.keys()), 
            format_func=lambda x: MODULES[x],
            label_visibility="collapsed"
        )
        
        st.markdown("---")
        # åº•éƒ¨ç”¨æˆ·ä¿¡æ¯åŒºåŸŸ
        with st.container():
            st.info(f"å½“å‰é…ç½®ç¯å¢ƒ:\n\nğŸ‘¤ **ä¸ªäºº**: Local\nğŸ¢ **å›¢é˜Ÿ**: Shared")

    # ==========================================
    # 2. æ¨¡å—è·¯ç”±
    # ==========================================
    if selected_mod == "cmd_gen":
        cmd_app.render(cfg_mgr)
        
    elif selected_mod == "db_tools":
        st.header("ğŸ’¾ æ•°æ®åº“è¿ç»´å·¥å…·ç®±")
        st.warning("ğŸš§ æ­¤æ¨¡å—æ­£åœ¨å¼€å‘ä¸­...")
        
    elif selected_mod == "monitor":
        st.header("ğŸ“Š ç”Ÿäº§ç¯å¢ƒç›‘æ§")
        st.info("æ­¤å¤„å°†é›†æˆ Grafana æˆ– Prometheus æ•°æ®ã€‚")

if __name__ == "__main__":
    main()

ğŸ“‚ 2. é‡å†™ modules/cmd_generator/app.py (æ ¸å¿ƒå‡çº§)
è¿™æ˜¯æœ¬æ¬¡æ›´æ–°çš„é‡å¤´æˆã€‚ç›´æ¥è¦†ç›–åŸæ–‡ä»¶ã€‚
import streamlit as st
import pandas as pd
from jinja2 import Template
import shlex
import uuid
import time

# --- çŠ¶æ€å¸¸é‡ ---
VIEW_MODE = "VIEW"
EDIT_MODE = "EDIT"

def render(cfg_mgr):
    """
    å‘½ä»¤ç”Ÿæˆå™¨ä¸»å…¥å£
    """
    # 1. æ¯æ¬¡æ¸²æŸ“å‰ï¼Œé‡æ–°è¯»å–æœ€æ–°æ•°æ®
    templates = cfg_mgr.get_all_templates()
    
    # 2. åˆå§‹åŒ– Session State
    if 'selected_tid' not in st.session_state:
        st.session_state['selected_tid'] = None
    if 'page_mode' not in st.session_state:
        st.session_state['page_mode'] = VIEW_MODE # VIEW or EDIT

    # ==========================================
    # å·¦ä¾§ï¼šèµ„æºå¯¼èˆªæ  (Resource Sidebar)
    # ==========================================
    with st.sidebar:
        st.header("èµ„æºåº“")
        
        # --- é¡¶éƒ¨å·¥å…·æ  ---
        col_tool1, col_tool2 = st.columns([4, 1])
        search_term = col_tool1.text_input("æœç´¢æ¨¡æ¿...", placeholder="è¾“å…¥å…³é”®è¯", label_visibility="collapsed")
        if col_tool2.button("â•", help="æ–°å»ºç©ºæ¨¡æ¿"):
            st.session_state['selected_tid'] = "NEW_TEMPLATE"
            st.session_state['page_mode'] = EDIT_MODE
            st.rerun()

        st.markdown("---")

        # --- åˆ—è¡¨æ¸²æŸ“é€»è¾‘ (å¸¦åˆ†ç±»æŠ˜å ) ---
        # 1. è¿‡æ»¤é€»è¾‘
        filtered_items = []
        for tid, t_data in templates.items():
            # ç®€å•çš„æœç´¢åŒ¹é…
            if search_term and (search_term.lower() not in t_data.get('name', '').lower()):
                continue
            t_data['_id'] = tid # ä¸´æ—¶å¡å…¥IDæ–¹ä¾¿å–ç”¨
            filtered_items.append(t_data)
        
        # 2. åˆ†ç»„é€»è¾‘
        all_cats = sorted(list(set(t['category'] for t in filtered_items)))
        
        if not filtered_items:
            st.caption("æ²¡æœ‰æ‰¾åˆ°åŒ¹é…çš„æ¨¡æ¿")

        for cat in all_cats:
            cat_items = [t for t in filtered_items if t['category'] == cat]
            
            # ä½¿ç”¨ Expander åŒ…å«åˆ†ç±»
            # é»˜è®¤å±•å¼€åŒ…å«å½“å‰é€‰ä¸­é¡¹çš„åˆ†ç±»
            is_expanded = False
            current_sel = st.session_state['selected_tid']
            if current_sel and any(t['_id'] == current_sel for t in cat_items):
                is_expanded = True
                
            with st.expander(f"ğŸ“ {cat}", expanded=is_expanded or bool(search_term)):
                for item in cat_items:
                    # å›¾æ ‡åŒºåˆ†æ¥æº
                    icon = "ğŸ¢" if item.get('source') == 'team' else "ğŸ‘¤"
                    # æŒ‰é’®æ ‡ç­¾
                    label = f"{icon} {item.get('name')}"
                    
                    # é€‰ä¸­é«˜äº®é€»è¾‘ (Streamlit æŒ‰é’®æ— æ³•ç›´æ¥é«˜äº®ï¼Œç”¨ emoji è¾…åŠ©æŒ‡ç¤º)
                    if item['_id'] == st.session_state['selected_tid']:
                        label = f"ğŸ‘‰ {label}"
                        
                    if st.button(label, key=f"nav_{item['_id']}", use_container_width=True):
                        st.session_state['selected_tid'] = item['_id']
                        st.session_state['page_mode'] = VIEW_MODE # åˆ‡æ¢æ¨¡æ¿æ—¶é‡ç½®ä¸ºæŸ¥çœ‹æ¨¡å¼
                        st.rerun()

    # ==========================================
    # å³ä¾§ï¼šå·¥ä½œå° (Main Workspace)
    # ==========================================
    
    current_tid = st.session_state['selected_tid']

    # åœºæ™¯ A: æ–°å»ºæ¨¡å¼
    if current_tid == "NEW_TEMPLATE":
        render_editor(cfg_mgr, templates, "NEW_TEMPLATE")
        
    # åœºæ™¯ B: æœªé€‰æ‹©
    elif not current_tid or current_tid not in templates:
        render_welcome_screen()
        
    # åœºæ™¯ C: é€‰ä¸­äº†æŸä¸ªæ¨¡æ¿
    else:
        template_data = templates[current_tid]
        
        # æ ¹æ®å½“å‰æ¨¡å¼æ¸²æŸ“ (æŸ¥çœ‹ vs ç¼–è¾‘)
        if st.session_state['page_mode'] == EDIT_MODE:
            render_editor(cfg_mgr, templates, current_tid)
        else:
            render_viewer(cfg_mgr, templates, current_tid)


